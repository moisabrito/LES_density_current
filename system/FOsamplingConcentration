FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      Cmean;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


    type            surfaces;
    libs            (sampling);
    writeControl    writeTime;

    surfaceFormat   vtk;
    fields          (FOconcentrationMean:columnAverage(alpha.salt));

    interpolationScheme cellPointFace;

    surfaces
    {
        yNormal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point   (0 0.0874 0);
                normal  (0 -1 0);
            }
            interpolate     true;
        }
    }


